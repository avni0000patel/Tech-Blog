<div class="row">
    <h2>Signup</h2>

    <form class="form signup-form">
        <div class="form-group">
            <label for="username-signup">Username:</label>
            <input class="form-input username-signup" type="text" id="username-signup" />
        </div>
        <div class="form-group">
            <label for="password-signup">Password:</label>
            <input class="form-input password-signup" type="password" id="password-signup" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Signup</button>
        </div>
        <div class="form-group">
            <a class="login-link" href="/login">Login instead</a>
        </div>
    </form>
</div>

<script src="../public\js\signup.js"></script>