<div class="comments">
    {{#each this}}
    <div class="card">
        <h2 class="card-header"></h2>
        <div class="comment card-body">
            <div>
                {{comment}}
            </div>
            <div>
                {{user.username}}, {{format_date createdAt}}
            </div>
        </div>
    </div>
    {{/each}}
</div>