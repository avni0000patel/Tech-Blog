{{#if posts.length}}
<div>
    <h2>Current Posts</h2>
    {{#each posts as |post|}}
    {{> dashboard-postinfo post}}
    <a href="/dashboard/edit/{{post.id}}">Edit Post</a>
    {{/each}}

</div>
{{/if}}

<button type="submit" class="btn"><a class="link" href="/dashboard/new">+ New Post</a></button>

<script src="../public/js/post.js"></script>